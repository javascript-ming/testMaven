<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testJava.mapper.BookMapper">
    <select id="getAllBooks" resultType="book">
        select * from t_book;
    </select>
    <select id="getBooksByPage" resultType="com.testJava.pojo.Book">
        SELECT * FROM t_book
        LIMIT #{offset}, #{pageSize}
    </select>
    <select id="countTotal" resultType="int">
        select count(*) from t_book
    </select>
    <insert id="addBook" parameterType="Book" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO t_book (name, author, price, book_path, book_cover)
        VALUES (#{name}, #{author}, #{price}, #{book_path}, #{book_cover})
    </insert>
    <update id="updateBook" parameterType="Book">
        update t_book
        set name = #{name}, author=#{author}, price=#{price}, book_path=#{book_path}, book_cover=#{book_cover}
        where id=#{id}
    </update>
    <delete id="deleteBook" parameterType="int">
        delete from t_book where id=#{param1}
    </delete>
</mapper>